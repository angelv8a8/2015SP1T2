<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Entrenador</th>
      <th>Bandera</th>
      <th>Uniforme</th>
      <th>Texto</th>
      <th>Grupo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.nombre %></td>
        <td><%= team.entrenador %></td>
        <td><img width="300px" src="<%= team.bandera %>"></td>
        <td><img height="300px" src="<%= team.uniforme %>"</td>
        <td><%= team.texto %></td>
        <td><%= Group.find(team.group_id).nombre %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

